<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
  <device>
    <name>{$DEVICE-NAME}</name>
      <config>
        <interface xmlns="urn:ios">
          <GigabitEthernet foreach="{/branch[name=$SERVICE-NAME]/topology/connection[name=$CONNECTION-NAME]/side[device=$DEVICE-NAME]/port[interface-type = 'GigabitEthernet']">
            <name>{current()/interface-name}</name>
            <description>{current()/../../type//policy-name} to {current()/../../side[device!=$DEVICE-NAME]/device} {current()/../../side[device!=$DEVICE-NAME]/port/interface-type}{current()/../../side[device!=$DEVICE-NAME]/port/interface-name}</description>
            <ip>
              <address>
                <primary>
                  <address>{current()/ip-address}</address>
                  <mask>{current()/ip-mask}</mask>
                </primary>
              </address>
              <ospf>
                <network>point-to-point</network>
                <cost>10</cost>
              </ospf>
            </ip>
            <logging>
              <event>
                <link-status>true</link-status>
              </event>
            </logging>
            <dampening>
            </dampening>
            <cdp>
              <enable>true</enable>
            </cdp>
            <load-interval>30</load-interval>
          </GigabitEthernet>
        </interface>
      </config>
  </device>
  </devices>
</config-template>
