<config-template xmlns="http://tail-f.com/ns/config/1.0">
  <devices xmlns="http://tail-f.com/ns/ncs">
  <device>
    <name>{$DEVICE-NAME}</name>
    <config>
        <interface xmlns="urn:ios">
          <GigabitEthernet>
            <name>{$INTERFACE-NAME}</name>
            <bfd>
              <interval>
                <msecs>{/branch-policies/interface/bfd-interval[name=/branch[name=$SERVICE-NAME]/topology/connection/endpoint[device = $DEVICE-NAME and interface-type = 'GigabitEthernet']/policy/bfd-interval]/msecs}</msecs>
                <min_rx>{/branch-policies/interface/bfd-interval[name=/branch[name=$SERVICE-NAME]/topology/connection/endpoint[device = $DEVICE-NAME and interface-type = 'GigabitEthernet']/policy/bfd-interval]/min_rx}</min_rx>
                <multiplier>{/branch-policies/interface/bfd-interval[name=/branch[name=$SERVICE-NAME]/topology/connection/endpoint[device = $DEVICE-NAME and interface-type = 'GigabitEthernet']/policy/bfd-interval]/multiplier}</multiplier>
              </interval>
            </bfd>
          </GigabitEthernet>
        </interface>
    </config>
  </device>
  </devices>
</config-template>