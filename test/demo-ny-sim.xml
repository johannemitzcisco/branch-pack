          <device>sim-catalyst-6840-1</device>
          <port>
            <interface-type>GigabitEthernet</interface-type>
            <interface-name>0/0/0</interface-name>
            <ip-address>68.138.1.4</ip-address>
            <ip-mask>255.255.255.0</ip-mask>
