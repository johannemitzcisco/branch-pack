<config xmlns="http://tail-f.com/ns/config/1.0">
  <branch-service xmlns="http://example.com/branch">
  <branch>
    <name>NYC</name>
    <topology>
      <device>
        <name>sim-catalyst-6840-1</name>
        <type>
          <role>core</role>
          <model>C6824-X-LE-40G</model>
        </type>
        <policies>
          <loopback>
            <policy-name>LOOPBACK</policy-name>
            <ip-address>1.1.1.1</ip-address>
          </loopback>
          <ospf>
            <policy-name>OSPF-ADDRESS</policy-name>
            <vlan-ip-address>2.2.2.2</vlan-ip-address>
          </ospf>
        </policies>
      </device>
      <connection>
        <name>core-1-router-1</name>
        <side>
          <name>A</name>
          <device>sim-catalyst-6840-1</device>
          <port>
            <interface-type>TenGigabitEthernet</interface-type>
            <interface-name>1/1</interface-name>
            <ip-address>4.4.4.4</ip-address>
            <ip-mask>255.255.255.0</ip-mask>
          </port>
        </side>
        <type>
          <core-router>
            <policy-name>CORE-ROUTER</policy-name>
          </core-router>
        </type>
      </connection>
      <connection>
        <name>core-1-router-2</name>
        <side>
          <name>A</name>
          <device>sim-catalyst-6840-1</device>
          <port>
            <interface-type>TenGigabitEthernet</interface-type>
            <interface-name>1/2</interface-name>
            <ip-address>4.4.4.5</ip-address>
            <ip-mask>255.255.255.0</ip-mask>
          </port>
        </side>
        <type>
          <core-router>
            <policy-name>CORE-ROUTER</policy-name>
          </core-router>
        </type>
      </connection>
      <connection>
        <name>core-interlink</name>
        <side>
          <name>A</name>
          <device>sim-catalyst-6840-1</device>
          <port>
            <interface-type>TenGigabitEthernet</interface-type>
            <interface-name>1/3</interface-name>
          </port>
          <port>
            <interface-type>TenGigabitEthernet</interface-type>
            <interface-name>1/4</interface-name>
          </port>
        </side>
        <type>
          <core-interlink>
            <policy-name>CORE-INTERLINK</policy-name>
          </core-interlink>
        </type>
      </connection>
      <connection>
        <name>access-1-core-1</name>
        <side>
          <name>A</name>
          <device>sim-catalyst-6840-1</device>
          <port>
            <interface-type>TenGigabitEthernet</interface-type>
            <interface-name>1/5</interface-name>
            <ip-address>4.4.4.4</ip-address>
            <ip-mask>255.255.255.0</ip-mask>
          </port>
        </side>
        <type>
          <access-core>
            <policy-name>ACCESS-CORE</policy-name>
          </access-core>
        </type>
      </connection>
    </topology>
  </branch>
  </branch-service>
</config>
